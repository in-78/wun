<%= form_for(item) do |f| %>

  <div class="field">
    Done:
    <%= f.check_box :complete %>
    <%= f.text_field :name, maxlength: 255 %>
    Star:
    <%= f.check_box :star, disabled: item.complete %>
  </div>

  <div class="field">
    Deadline:
    <%= f.text_field :date_due, class: "calendar", disabled: item.complete, maxlength: 10 %>
  </div>

  <div class="field">
    Date remind:
    <%= f.text_field :date_remind, class: "calendar", disabled: item.complete, maxlength: 10 %>
  </div>

  <% if item.complete %>
    Description:
    <%= item.description.html_safe %>
  <% else %>
    <div class="control-group">
      <div class="controls">
        <%= f.text_area :description, class: "tinymce", rows: 15 %>
      </div>
      <%= tinymce %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Close', list %>
  </div>
<% end %>