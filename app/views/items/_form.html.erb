<%= form_for item do |f| %>

  <div class="field">
    Done:
    <%= f.check_box :complete %>
    <%= f.text_field :name, maxlength: 255, disabled: item.complete %>
    Star:
    <%= f.check_box :star, disabled: item.complete %>
  </div>

  <div class="field">
    Deadline:
    <%= f.text_field :date_due, class: "calendar", disabled: item.complete, maxlength: 10 %>
  </div>

  <div class="field">
    Date remind:
    <%= f.text_field :date_remind, class: "calendar", disabled: item.complete, maxlength: 10 %>
  </div>

  <%= render 'description', item: item, f: f %>

  <%= render 'location', item: item, f: f %>

  <div class="field">
    Image:
    <%= f.file_field :image, disabled: item.complete %>
  </div>
  <div>
    <%= link_to (image_tag item.image_url(:thumb)), item.image_url, :class => "fancybox" if item.image? %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Update', :class => 'btn btn-primary' %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
    <%= link_to 'Close', list, :class => 'btn' %>
  </div>
<% end %>