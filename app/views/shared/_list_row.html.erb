<% is_current ||= false %>
<%= content_tag_for :tr, list, :class => get_list_row_class_name(is_current) do %>
  <td><%= link_to list.title, list %></td>
  <td><%= list.items_count current_user %></td>
  <td>
  	<% if list.is_usual? %>
  		<%= link_to 'Edit', edit_list_path(list) %>
  	<% end %>
  </td>
<% end %>