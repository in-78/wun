<% content_for :lists do %>
  <%= render 'shared/list_table', lists: @lists, current_list_id: @list.id %>
  <br />
  <%= render 'shared/create_lists' %>
  <% if @list.is_usual? %>
    <%= link_to 'Destroy', @list, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
  <% end %>
<% end %>

<% content_for :items do %>
  <%= render 'shared/create_items', list: @list %>
  <%= render 'shared/item_table', items: @items %>
<% end %>